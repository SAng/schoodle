<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Schoodle</title>

    <link rel="stylesheet" href="../vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="../vendor/border-box.css" type="text/css" />


    <link rel="stylesheet" href="../styles/bootstrap.min.css" type="text/css" />
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.17.47/css/bootstrap-datetimepicker.css">
    <link rel="stylesheet" href="../vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="../vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="../styles/layout.css" type="text/css" />
    <link rel="stylesheet" href="../styles/long-url.css" type="text/css" />
    <link rel="stylesheet" href="../styles/font-awesome-4.7.0/css/font-awesome.min.css">
    <script type="text/javascript" src="../vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.18.1/moment.js"></script>

    <script type="text/javascript" src="../scripts/bootstrap.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.17.47/js/bootstrap-datetimepicker.min.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
    <script type="text/javascript" src="/scripts/app-long-url.js"></script>
  </head>

  <body>

    <nav id="nav-bar">
      <!--  <img class="logo" src="images/bird.png"> -->
      <!-- <span class="header">Schoodle</span> -->
      <!-- <button id="login">Login</button> -->
      <h2>Schoodle</h2>
    </nav>
    <main class="container">
      <h1><%= title %></h1>
      <h2><%= description %></h2>
      <button class="add-participant-button"> Add Participant </button>
      <table class="table-slot">
        <tr>
          <th></th>
          <th>Participants</th>
          <% for (var slot of slots) { %>
            <th> <%= slot.time %> </th>
          <% } %>
        </tr >
        <% for (var user_id in users) { %>
          <% var user = users[user_id] %>
          <tr class="row">
            <td class="button-column">
              <button class="delete-participant" hidden> Delete </button>
              <input type="submit" class="submit-button" value="Submit" hidden>
              <button class="edit-participant"> Edit </button>
            </td>
            <td class="participant-column">
              <input type="text" class="add-participant-text" value="<%= user.name %>" />
            </td>
            <% for (var slot of slots) { %>
              <% if (slot.users.includes(Number(user_id))) { %>
                <td><i class="fa fa-check-circle" aria-hidden="true"></i></td>
              <% } else { %>
                <td><i class="fa fa-circle-o" aria-hidden="true"></i></td>
              <% } %>
            <% } %>
          </tr>
        <% } %>
      </table>
    </main>
  </body>

  <footer class="footer">
    <section class="long-url">
      <div class="long-url">
        <input type="text" class="long-url" name="long-url" value="https://www.Schoodlele.com/event/long id generated">
      </div>
    </section>
  </footer>
</html>
